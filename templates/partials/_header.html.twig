        <div class="nav-links">
            <a href="#" class="cyber-link">Accueil</a>
            <a href="#" class="cyber-link">Articles</a>
            <a href="#" class="cyber-link">Présentation</a>
            <a href="#" class="cyber-link">Contact</a>
        </div>
        <button class="burger" aria-label="Menu">
            <span class="burger-line"></span>
            <span class="burger-line"></span>
            <span class="burger-line"></span>
        </button>
    </nav>
</header>

<div class="mobile-overlay"></div>
<div class="mobile-nav">
    <button class="mobile-close" aria-label="Fermer le menu">
        <span class="burger-line"></span>
        <span class="burger-line"></span>
        <span class="burger-line"></span>
    </button>
    <div class="mobile-links">
        <a href="#" class="cyber-link">Accueil</a>
        <a href="#" class="cyber-link">Articles</a>
        <a href="#" class="cyber-link">Présentation</a>
        <a href="#" class="cyber-link">Contact</a>
    </div>
</div>

<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    transition: 0.3s;
}

header {
    background: rgba(248, 249, 250, 0.97);
    padding: 1.5rem 5%;
    border-bottom: 2px solid rgba(111, 66, 193, 0.1);
    position: relative;
    z-index: 1000;
    backdrop-filter: blur(10px);
}

nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    font-weight: 800;
    font-size: 2rem;
    background: linear-gradient(45deg, #007bff, #6f42c1, #e83e8c);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    letter-spacing: -0.5px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    transition: all 0.4s ease-in-out;
    padding: 0.2rem 0.5rem;
    position: relative;
    background-size: 200% auto;
    display: inline-block;
    text-decoration: none;
}

/* Effet au survol */
.logo:hover {
    transform: scale(1.1);
    background: linear-gradient(45deg, #ff7eb3, #ff3d6e, #d100ff);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
}

.nav-links {
    display: flex;
    gap: 2rem;
}

.cyber-link {
    color: #495057;
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    position: relative;
    transition: all 0.3s ease;
    border-radius: 4px;
}

.cyber-link:hover {
    color: #007bff;
    background: linear-gradient(45deg,
    rgba(0, 123, 255, 0.1),
    rgba(111, 66, 193, 0.1));
}

.burger, .mobile-close {
    display: none;
    width: 48px;
    height: 48px;
    padding: 12px;
    background: transparent;
    border: none;
    cursor: pointer;
    position: relative;
}

.burger-line {
    display: block;
    width: 24px;
    height: 2px;
    margin: 5px 0;
    background: linear-gradient(45deg, #007bff, #6f42c1);
    transition: transform 0.4s cubic-bezier(0.68, -0.6, 0.32, 1.6),
                opacity 0.3s ease-in-out;
    border-radius: 2px;
}

.mobile-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    opacity: 0;
    visibility: hidden;
    transition: 0.3s;
    z-index: 1001;
}

.mobile-nav {
    position: fixed;
    top: 0;
    right: -100%;
    height: 100vh;
    width: 80%;
    max-width: 300px;
    background: rgba(248, 249, 250, 0.97);
    backdrop-filter: blur(10px);
    padding: 1rem;
    transition: 0.5s cubic-bezier(0.68, -0.6, 0.32, 1.6);
    z-index: 1002;
    box-shadow: -2px 0 20px rgba(0, 0, 0, 0.2);
}

.mobile-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 4rem;
}

.mobile-nav.active {
    right: 0;
}

.mobile-overlay.active {
    opacity: 1;
    visibility: visible;
}

.mobile-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
}

.burger.active .burger-line:nth-child(1),
.mobile-close .burger-line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
}

.burger.active .burger-line:nth-child(2),
.mobile-close .burger-line:nth-child(2) {
    opacity: 0;
}

.burger.active .burger-line:nth-child(3),
.mobile-close .burger-line:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
}

@media screen and (max-width: 768px) {
    .burger {
        display: block;
        z-index: 1003;
    }

    .mobile-close {
        display: block;
    }

    .nav-links {
        display: none;
    }

    .mobile-nav .cyber-link {
        display: block;
        padding: 1rem;
        text-align: center;
        font-size: 1.1rem;
        border-radius: 8px;
    }

    .mobile-nav .cyber-link:hover {
        background: linear-gradient(45deg,
            rgba(0, 123, 255, 0.1),
            rgba(111, 66, 193, 0.1));
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const burger = document.querySelector('.burger');
    const mobileClose = document.querySelector('.mobile-close');
    const mobileNav = document.querySelector('.mobile-nav');
    const mobileOverlay = document.querySelector('.mobile-overlay');
    const body = document.body;
    const navLinks = document.querySelectorAll('.mobile-nav .cyber-link');

    const toggleMenu = () => {
        const isActive = mobileNav.classList.toggle('active');
        mobileOverlay.classList.toggle('active', isActive);
        burger.classList.toggle('active', isActive);
        body.style.overflow = isActive ? 'hidden' : '';
    };

    const closeMenu = () => {
        mobileNav.classList.remove('active');
        mobileOverlay.classList.remove('active');
        burger.classList.remove('active');
        body.style.overflow = '';
    };

    burger.addEventListener('click', toggleMenu);
    mobileClose.addEventListener('click', closeMenu);
    mobileOverlay.addEventListener('click', closeMenu);
    document.addEventListener('keydown', (e) => e.key === 'Escape' && closeMenu());
    navLinks.forEach(link => link.addEventListener('click', closeMenu));
});

</script>