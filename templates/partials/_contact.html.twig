<section class="contact-section">
    <h1 class="contact-title">Ã‰crivez-moi</h1>

    {% for message in app.flashes('success') %}
        <div class="flash-message success">
            <i class="fas fa-check-circle"></i>
            {{ message }}
        </div>
    {% endfor %}

    <div class="form-card">
        {{ form_start(form, {'attr': {'class': 'contact-form'}}) }}
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name, {'attr': {'class': 'form-error'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email, {'attr': {'class': 'form-error'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.subject) }}
                {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.subject, {'attr': {'class': 'form-error'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.message) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.message, {'attr': {'class': 'form-error'}}) }}
            </div>

            <button type="submit" class="submit-button">
                <i class="fas fa-paper-plane"></i>
                Envoyer
            </button>
        {{ form_end(form) }}
    </div>
</section>

<style>
.contact-section {
    padding: 2rem 5%;
    max-width: 800px;
    margin: 2rem auto;
    position: relative;
    z-index: 2;
}

.contact-title {
    font-weight: 800;
    font-size: 2.5rem;
    background: linear-gradient(45deg, #007bff, #6f42c1, #e83e8c);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    display: inline-block;
    margin-bottom: 2rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
}

.form-card {
    background: rgba(255, 255, 255, 0.85);
    border-radius: 12px;
    padding: 2rem;
    backdrop-filter: blur(5px);
    border: 1px solid rgba(111, 66, 193, 0.1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
}

.form-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
        radial-gradient(circle at 10% 20%, rgba(0, 123, 255, 0.03) 0%, transparent 20%),
        radial-gradient(circle at 80% 60%, rgba(111, 66, 193, 0.03) 0%, transparent 20%),
        radial-gradient(circle at 40% 80%, rgba(232, 62, 140, 0.03) 0%, transparent 20%);
    opacity: 0.7;
    z-index: -1;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: #495057;
    font-size: 0.95rem;
}

.form-control {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid rgba(111, 66, 193, 0.2);
    border-radius: 6px;
    background-color: rgba(255, 255, 255, 0.9);
    transition: all 0.3s;
    font-size: 1rem;
}

.form-control:focus {
    outline: none;
    border-color: rgba(0, 123, 255, 0.5);
    box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
}

textarea.form-control {
    min-height: 150px;
    resize: vertical;
}

.form-error {
    color: #dc3545;
    font-size: 0.85rem;
    margin-top: 0.5rem;
    padding-left: 0.5rem;
    border-left: 2px solid #dc3545;
}

.flash-message {
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    animation: slideIn 0.3s ease;
}

.flash-message.success {
    background: rgba(40, 167, 69, 0.1);
    border: 1px solid rgba(40, 167, 69, 0.2);
    color: #28a745;
}

.flash-message i {
    font-size: 1.2rem;
}

.submit-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 2rem;
    background: linear-gradient(45deg, #007bff, #6f42c1);
    color: white;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.3s;
    font-size: 1rem;
}

.submit-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
}

.submit-button:active {
    transform: translateY(0);
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@media screen and (max-width: 768px) {
    .contact-section {
        padding: 1.5rem;
        margin: 1rem auto;
    }

    .contact-title {
        font-size: 2rem;
    }

    .form-card {
        padding: 1.5rem;
    }

    .submit-button {
        width: 100%;
        justify-content: center;
    }
}
</style>