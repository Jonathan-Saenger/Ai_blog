{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
<section class="admin-section">
    <div class="admin-container">
        <header class="page-header">
            <h1>Modifier l'Article</h1>
            <div class="header-decoration"></div>
        </header>

        <div class="content-card">
            {{ form_start(form, {'attr': {'class': 'edit-form'}}) }}
                <div class="form-fields">
                    {{ form_widget(form) }}
                </div>

                <div class="button-container">
                    <div class="action-buttons">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i>
                            <span>{{ button_label|default('Mettre à jour') }}</span>
                        </button>
                        {{ include('admin_article/_delete_form.html.twig') }}
                    </div>

                    <a href="{{ path('app_admin_article_index') }}" class="btn btn-back">
                        <i class="fas fa-arrow-left"></i>
                        <span>Retour à la liste</span>
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</section>

<style>
/* Reset et variables */
:root {
    --primary-color: #4361ee;
    --primary-hover: #3a56d4;
    --danger-color: #ef476f;
    --danger-hover: #d63d63;
    --text-color: #2b2d42;
    --text-light: #6c757d;
    --border-color: #e9ecef;
    --background-light: #f8f9fa;
    --shadow-sm: 0 2px 4px rgba(0,0,0,0.04);
    --shadow-md: 0 4px 6px rgba(0,0,0,0.1);
    --shadow-lg: 0 10px 15px rgba(0,0,0,0.1);
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
}

/* Layout de base */
.admin-section {
    min-height: 100vh;
    background-color: var(--background-light);
    padding: 2rem 1rem;
}

.admin-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
}

/* En-tête de page */
.page-header {
    margin-bottom: 2.5rem;
    position: relative;
}

.page-header h1 {
    font-size: 2.5rem;
    color: var(--text-color);
    font-weight: 700;
    margin: 0;
    padding-bottom: 1rem;
}

.header-decoration {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60px;
    height: 4px;
    background: linear-gradient(to right, var(--primary-color), var(--danger-color));
    border-radius: 2px;
}

/* Carte principale */
.content-card {
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    padding: 2.5rem;
    margin-bottom: 2rem;
}

/* Styles du formulaire */
.edit-form {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.form-fields {
    display: grid;
    gap: 1.5rem;
}

.form-fields > div {
    margin-bottom: 1.5rem;
}

.form-fields label {
    display: block;
    font-weight: 500;
    color: var(--text-color);
    margin-bottom: 0.5rem;
}

.form-fields input[type="text"],
.form-fields textarea,
.form-fields select {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 2px solid var(--border-color);
    border-radius: var(--radius-sm);
    background-color: white;
    color: var(--text-color);
    font-size: 1rem;
    transition: all 0.3s ease;
}

.form-fields input[type="text"]:focus,
.form-fields textarea:focus,
.form-fields select:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
    outline: none;
}

/* Conteneur des boutons */
.button-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
}

.action-buttons {
    display: flex;
    gap: 1rem;
}

/* Styles des boutons */
.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-sm);
    font-weight: 500;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
    font-size: 1rem;
}

.btn i {
    font-size: 1.1em;
}

.btn-primary {
    background-color: var(--primary-color);
    color: white;
}

.btn-primary:hover {
    background-color: var(--primary-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

.btn-danger {
    background-color: var(--danger-color);
    color: white;
}

.btn-danger:hover {
    background-color: var(--danger-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

.btn-back {
    color: var(--text-light);
    background-color: transparent;
    border: 1px solid var(--border-color);
}

.btn-back:hover {
    background-color: var(--background-light);
    color: var(--text-color);
    transform: translateX(-2px);
}

/* Formulaire de suppression */
form[name="delete_form"] {
    margin: 0;
}

form[name="delete_form"] button {
    background-color: var(--danger-color);
    color: white;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-sm);
    font-weight: 500;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
    font-size: 1rem;
}

form[name="delete_form"] button:hover {
    background-color: var(--danger-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

/* Media Queries */
@media (max-width: 768px) {
    .admin-section {
        padding: 1rem 0;
    }

    .content-card {
        padding: 1.5rem;
        border-radius: var(--radius-md);
    }

    .page-header h1 {
        font-size: 2rem;
    }

    .button-container {
        flex-direction: column-reverse;
        gap: 1rem;
    }

    .action-buttons {
        width: 100%;
        flex-direction: column;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }

    .btn-back {
        width: 100%;
        justify-content: center;
        margin-bottom: 1rem;
    }
}
</style>
{% endblock %}