{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
<section class="admin-section">
    <h1 class="admin-title">Modifier l'Article</h1>

    <div class="admin-card">
        <div class="form-container">
            {{ include('admin_article/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>

        <div class="admin-actions">
            <a href="{{ path('app_admin_article_index') }}" class="back-button">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>

            {{ include('admin_article/_delete_form.html.twig') }}
        </div>
    </div>
</section>

<style>
.admin-section {
    padding: 2rem 5%;
    max-width: 1440px;
    margin: 2rem auto;
    position: relative;
    z-index: 2;
    background: linear-gradient(135deg, rgba(248, 249, 250, 0.7), rgba(248, 249, 250, 0.4));
    border-radius: 20px;
    backdrop-filter: blur(10px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    border: 1px solid rgba(111, 66, 193, 0.1);
    overflow: hidden;
}

.admin-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
        radial-gradient(circle at 10% 20%, rgba(0, 123, 255, 0.03) 0%, transparent 20%),
        radial-gradient(circle at 80% 60%, rgba(111, 66, 193, 0.03) 0%, transparent 20%),
        radial-gradient(circle at 40% 80%, rgba(232, 62, 140, 0.03) 0%, transparent 20%);
    opacity: 0.7;
    z-index: -1;
}

.admin-title {
    font-weight: 800;
    font-size: 2.5rem;
    background: linear-gradient(45deg, #007bff, #6f42c1, #e83e8c);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    display: inline-block;
    margin-bottom: 2rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
}

.admin-card {
    background: rgba(255, 255, 255, 0.85);
    border-radius: 12px;
    padding: 2rem;
    backdrop-filter: blur(5px);
    border: 1px solid rgba(111, 66, 193, 0.1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
}

.admin-card:hover {
    box-shadow: 0 8px 25px rgba(0, 123, 255, 0.15);
}

.form-container {
    margin-bottom: 2rem;
}

/* Styles pour le formulaire */
.form-container form div {
    margin-bottom: 1.5rem;
}

.form-container label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: #495057;
}

.form-container input[type="text"],
.form-container textarea,
.form-container select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid rgba(111, 66, 193, 0.2);
    border-radius: 6px;
    background-color: rgba(255, 255, 255, 0.9);
    transition: all 0.3s;
}

.form-container input[type="text"]:focus,
.form-container textarea:focus,
.form-container select:focus {
    outline: none;
    border-color: rgba(0, 123, 255, 0.5);
    box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
}

.form-container button[type="submit"] {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.6rem 1.5rem;
    background: linear-gradient(45deg, #007bff, #6f42c1);
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.3s;
    position: relative;
    overflow: hidden;
}

.form-container button[type="submit"]:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.form-container button[type="submit"]::after {
    content: '\f0c7';
    font-family: 'Font Awesome 5 Free';
    font-weight: 900;
    margin-left: 0.5rem;
}

.admin-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(111, 66, 193, 0.1);
    flex-wrap: wrap;
}

.back-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    background: transparent;
    color: #6c757d;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s;
    font-weight: 500;
    border: 1px solid rgba(108, 117, 125, 0.2);
}

.back-button:hover {
    background-color: rgba(108, 117, 125, 0.1);
    color: #495057;
    transform: translateX(-3px);
}

/* Style pour le formulaire de suppression */
form[name="delete_form"] button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    background: linear-gradient(45deg, #dc3545, #e83e8c);
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.3s;
}

form[name="delete_form"] button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(220, 53, 69, 0.2);
}

form[name="delete_form"] button::before {
    content: '\f2ed';
    font-family: 'Font Awesome 5 Free';
    font-weight: 900;
}

@media screen and (max-width: 768px) {
    .admin-section {
        padding: 1.5rem;
        margin: 1rem auto;
    }

    .admin-card {
        padding: 1rem;
    }

    .admin-title {
        font-size: 2rem;
    }

    .admin-actions {
        flex-direction: column;
    }

    .back-button,
    form[name="delete_form"] button {
        width: 100%;
        justify-content: center;
    }

    .form-container button[type="submit"] {
        width: 100%;
    }
}
</style>
{% endblock %}